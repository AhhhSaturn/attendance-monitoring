{ 
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": false,
    "noImplicitAny": false,
    "outDir": "dist",
    "resolveJsonModule": true,
  },
  "exclude": [ "node_modules" ] ,
  "include": ["src/**/*", "main.ts", "preload.ts"]
}